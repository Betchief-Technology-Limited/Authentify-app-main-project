    "type": "git",
    "url": "git+ssh://git@github.com/Betchief-Technology-Limited/betchief-otp-generation.git"
  },
  "keywords": [
    "otp",
    "totp",
    "hotp",
    "one-time password",
    "2fa",
    "authenticator"
  ],
  "author": "Authentify",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0"
  },
  "dependencies": {
    "qrcode": "^1.5.4"
  }
}
